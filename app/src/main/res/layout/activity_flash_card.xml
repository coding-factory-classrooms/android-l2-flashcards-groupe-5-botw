<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EAE9E9"
    tools:context=".FlashCardActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="350dp"
        android:layout_height="250dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="16dp"
        tools:srcCompat="@drawable/link" />

    <TextView
        android:id="@+id/questionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/answer1Button"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        tools:text="Comment s'appelle ce personnage ?" />

    <Button
        android:id="@+id/answer1Button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:text="Button"
        app:backgroundTint="#485CB8"
        app:layout_constraintBottom_toTopOf="@+id/answer2Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/answer3Button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Button"
        app:backgroundTint="#485CB8"
        app:layout_constraintBottom_toTopOf="@+id/answer4Button"
        app:layout_constraintEnd_toEndOf="@+id/answer2Button"
        app:layout_constraintStart_toStartOf="@+id/answer2Button"
        app:layout_constraintTop_toBottomOf="@+id/answer2Button" />

    <Button
        android:id="@+id/answer2Button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Button"
        app:backgroundTint="#485CB8"
        app:layout_constraintBottom_toTopOf="@+id/answer3Button"
        app:layout_constraintEnd_toEndOf="@+id/answer1Button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/answer1Button"
        app:layout_constraintTop_toBottomOf="@+id/answer1Button" />

    <Button
        android:id="@+id/answer4Button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="Button"
        app:backgroundTint="#485CB8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/answer3Button"
        app:layout_constraintStart_toStartOf="@+id/answer3Button"
        app:layout_constraintTop_toBottomOf="@+id/answer3Button" />

    <Button
        android:id="@+id/nextQuestionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:text="Next"
        app:backgroundTint="#B99F65"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/answer4Button" />

</androidx.constraintlayout.widget.ConstraintLayout>