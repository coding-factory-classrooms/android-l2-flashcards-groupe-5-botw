<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EAE9E9"
    tools:context=".FlashCardActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="350dp"
        android:layout_height="250dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toTopOf="@+id/questionTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/link"
        tools:srcCompat="@drawable/link" />

    <TextView
        android:id="@+id/questionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        tools:text="Comment s'appelle ce personnage ?" />

    <Button
        android:id="@+id/nextQuestionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="32dp"
        android:text="Next"
        app:backgroundTint="#B99F65"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <RadioGroup
        android:layout_width="0dp"
        android:layout_height="288dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintBottom_toTopOf="@+id/nextQuestionButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/questionTextView"
        app:layout_constraintVertical_bias="0.506">

        <RadioButton
            android:id="@+id/answer1RadioButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#485CB8"
            android:text="RadioButton"
            android:textColor="#FFFFFF"
            app:buttonTint="#FFFFFF" />

        <RadioButton
            android:id="@+id/answer4RadioButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#485CB8"
            android:text="RadioButton"
            android:textColor="#FFFFFF"
            app:buttonTint="#FFFFFF" />

        <RadioButton
            android:id="@+id/answer2RadioButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#485CB8"
            android:text="RadioButton"
            android:textColor="#FFFFFF"
            app:buttonTint="#FFFFFF" />

        <RadioButton
            android:id="@+id/answer3RadioButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#485CB8"
            android:text="RadioButton"
            android:textColor="#FFFFFF"
            app:buttonTint="#FFFFFF" />
    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>